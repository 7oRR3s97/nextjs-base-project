{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "storybook/*": ["./.storybook/*"],
      "assets/*": ["src/assets/*"],
      "data/*": ["src/data/*"],
      "graphql/*": ["src/graphql/*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "config/*": ["src/config/*"],
      "hooks/*": ["src/hooks/*"],
      "redux/*": ["src/redux/*"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["src/styles/*"],
      "contracts/*": ["src/contracts/*"],
      "helpers/*": ["src/helpers/*"],
      "@server/*": ["src/server/*"],
      "@hooks/*": ["src/hooks/*"],
      "@queries/*": ["src/hooks/queries/*"],
      "@mutations/*": ["src/hooks/mutations/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./jest.setup.ts",
    "./jest.reporters.ts",
    "./.storybook/**/*.ts",
    "./.storybook/**/*.tsx"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs",
      "baseUrl": "./"
    }
  }
}
